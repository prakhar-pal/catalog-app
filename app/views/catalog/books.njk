{% extends 'layout.njk' %}

{% block main %}
<body>
    <main class='books-app'>
        <div class='heading-container'>
            <h1>Here are all available books</h1>
            <small class="py-4">
                Can't find any books?
                <a href='/catalog/book/add'>Add a book</a>
            </small>
        </div>
        <table class='table'>
            <tr>
                <th>Title</th>
                <th>Author</th>
            </tr>
            {% for book in books %}
                <tr>
                    <td>
                        {{ book.title }}
                    </td>
                    <td>
                        {{ book.author.firstName }}
                        {{ book.author.lastName }}
                    </td>
                </tr>
            {% endfor %}
        </table>
{% endblock %}
