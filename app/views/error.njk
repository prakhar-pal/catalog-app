{% extends 'layout.njk' %}
{% block main %}

    <a href='#' id='go-back' class="mt-2 flex items-center no-underline">
     &larr; Go Back
    </a>
    <div class="text-center">
        <h1 class="mt-4"> Something went wrong</h1>
        <small class="text-red-400 mt-4">
            {{ error }}
        </small>
        <br />
        <a href='/' class="inline-block text-sm bg-teal-900 text-white px-4 py-2 rounded mt-4">
            Go Home
        </a>
    </div>
    <script>
        const goBackLink = document.querySelector('#go-back');
        goBackLink.addEventListener('click', function(){
            window.history.go(-1);
        });
    </script>
{% endblock %}
